<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.registerActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/username_register"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="30dp"
                android:layout_marginRight="67dp"
                />
        </LinearLayout>

        <EditText
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:hint="input your user name here"
            android:id = "@+id/username_textedit"
            android:maxLines="1"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/password_input"
            >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="67dp"
                android:text="Password"
                android:textSize="30dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/password_register_layout"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:hint="input your password here"
            android:maxLines="1"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/height_input"
            >

            <TextView
                android:id="@+id/heightView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="67dp"
                android:text="Height"
                android:textSize="30dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/height_register_layout"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:hint="input your height here"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/gender_register_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="67dp"
            android:text="Gender"
            android:textSize="30dp" />

        <RadioGroup
            android:id = "@+id/choose_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="male"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="female"/>
        </RadioGroup>

        <TextView
            android:id="@+id/birthday_register_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="67dp"
            android:text="Birthday"
            android:textSize="30dp" />
        <DatePicker
            android:id="@+id/birthday_Picker"
            android:calendarViewShown="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Security Question"
                android:textSize="30dp"
                android:layout_marginRight="67dp"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/security_question_register_layout"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:hint="input your security question  here"
            android:maxLines="1"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Security Answer"
                android:textSize="30dp"
                android:layout_marginRight="67dp"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/security_answer_register_layout"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:hint="input your security question  here"
            android:maxLines="1"
            />

        <Button
            android:id="@+id/submit_user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="confirm account"
            />
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>